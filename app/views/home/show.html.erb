<div>
  <h1 class="font-bold text-4xl mb-5">Select a seat</h1>

  <% if flash[:error] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Error!</strong>
      <span class="block sm:inline"><%= flash[:error] %></span>
    </div>
  <% end %>

  <div id="seats" class="flex">
    <% @seats.each do |seat| %>
      <%= form_with model: seat, url: seat_path(seat), method: :put do |f|  %>
        <div class="w-10 h-10 bg-gray-200 mx-3 text-center cursor-pointer">
          <%= f.submit seat.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
